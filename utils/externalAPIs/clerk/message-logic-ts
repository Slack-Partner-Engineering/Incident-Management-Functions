import { Incident } from "../../../types/incident-object.ts";

const sendMessageClerk = async (
  incident: Incident,
  env: any,
  status: string,
) => {
  if (
    incident.incident_status === env["CLERK_NOTIFICATION_LEVEL"] ||
    incident.incident_swarming_channel_id !== undefined
  ) {
    switch (status) {
      case "new": {
        break;
      }
      case "escalated": {
        break;
      }
      case "deescalated": {
        break;
      }
      case "swarm": {
        break;
      }
      case "update": {
        break;
      }
      case "close": {
        break;
      }
      default:
        break;
    }
  }

  await console.log(incident);

  return true; //or false if not paged
};

export { sendMessageClerk };
